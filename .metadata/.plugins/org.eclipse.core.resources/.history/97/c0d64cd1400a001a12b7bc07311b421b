package com.lf.sino.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.lf.sino.model.Denuncia;
import com.lf.sino.repository.DenunciaRepository;

@Service
@Transactional(readOnly = false)
public class DenunciaServiceImpl implements DenunciaService {

	@Autowired
	private DenunciaRepository denunciaAcidenteRepository;

	@Override
	public void salvar(Denuncia denuncia) {
		denunciaAcidenteRepository.save(denuncia);

	}
	@Override
	@Transactional(readOnly = true)
	public List<Denuncia> listar() {
		return denunciaAcidenteRepository.findAll();
	}



	@Override
	public Denuncia buscarPorId(Integer id) {
		// TODO Auto-generated method stub
		return null;
	}

}
