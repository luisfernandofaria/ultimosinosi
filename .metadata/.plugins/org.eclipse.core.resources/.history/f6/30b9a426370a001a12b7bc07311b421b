package com.lf.sino.controller;

import org.springframework.stereotype.Controller;
import org.springframework.transaction.annotation.Transactional;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PostMapping;

import com.lf.sino.model.Denuncia;

@Controller
public class DenunciaController {

	@GetMapping("/denuncia/registrar")
	public String cadastrarDenuncia(Model model) {
		model.addAttribute("denuncia", new Denuncia());
		return "denuncia/registrar";
	}

	@PostMapping("/denuncia/registrar")
	public String salvar(@ModelAttribute Denuncia denuncia) {
		return "redirect:/";
	}

	@Transactional(readOnly = true)
	@GetMapping("/teste")
	public void testar() {
	}
}