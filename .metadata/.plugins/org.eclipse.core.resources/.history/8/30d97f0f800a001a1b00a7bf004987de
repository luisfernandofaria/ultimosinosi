package com.lf.sino.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.lf.sino.model.Municipio;
import com.lf.sino.repository.MunicipioRepository;

@RestController
@RequestMapping("/municipios")
public class MunicipoController {

	
	@Autowired
	private MunicipioRepository municipioRepository;
	
	@GetMapping("/listar")
	public String listar(ModelMap model) {
		model.addAttribute("municipios", municipioRepository.findAll());
		return "municipio/lista"; 
	}
	
	@GetMapping("/listar")
	public List<Municipio> listar() {
		List<Municipio> listaMunicipio = municipioRepository.findAll();		
		return listaMunicipio;
	}
	
}
